#!/usr/bin/env perl

use strict;

if (scalar(@ARGV) < 2) {
    print "Usage: $0 <ip-address> <interface>\n\n";
    exit(1);
}

my $ip = $ARGV[0];
my $iface = $ARGV[1];

# Check if ip is here
my $ip_check = `/sbin/ip addr show`;
unless ($ip_check  =~ /$ip/) {
    print "OK: IP address is not here\n";
    exit(0);
}


`/sbin/ip addr del $ip/32 dev $iface`;

print "OK\n";
exit(0);
